<div id="page-content-wrapper">
  <div class="container-fluid">
    <% @articles.each do |article| %>
    <div class="row">
      <div class="col-lg-12">
        <h1><%= article.title %></h1>
        <p><%= article.content %></p>
        <span><%= link_to 'Show', article, class: 'action' %></span>
      </div>
    </div>
    <% end %>
  </div>
</div>